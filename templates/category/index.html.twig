{% extends 'base.html.twig' %}

{% block header %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
       <h1 class="h3 mb-0 text-gray-800">Categorías</h1>
       <a href="/category/create" class="d-none d-sm-inline-block btn btn-primary shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Crear categoría</a>
    </div>
{% endblock %}

{% block body %}

<div class="example-wrapper">   

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="card text-left">
      <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">Código</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <th>{{ category.code }}</th>
                        <td>{{ category.name }}</td>
                        <td>{{ category.description }}</td>
                        <td>
                            
                            <a href="/category/status/{{category.id}}" class="btn btn-sm btn-circle {{ category.active == '1' ? 'btn-success' : 'btn-warning' }}"><i class="fas fa-check"></i>
                            <a href="/category/edit/{{category.id}}" class="btn btn-sm btn-circle btn-info ml-2"><i class="fas fa-edit"></i>
                            <a href="/category/delete/{{category.id}}" class="btn btn-sm btn-circle btn-danger ml-2"><i class="fas fa-trash"></i>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
      </div>
    </div>
</div>
{% endblock %}
