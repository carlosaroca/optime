{% extends 'base.html.twig' %}

{% block header %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
       <h1 class="h3 mb-0 text-gray-800">Creando nueva categoría</h1>
    </div>
{% endblock %}

{% block body %}

<div class="example-wrapper">
    

    <div class="row">
        <div class="col-sm-4 offset-md-4">

            <div class="card text-left">
      <div class="card-body">
       
        {{ form_start(form) }}

            <div class="form-group">
                <label for="exampleInputEmail1">{{ form_label(form.code, 'Código de la categoría') }}</label>
                {{ form_widget(form.code, {'attr': {'class': 'form-control', 'placeholder' : 'Ingresa el código de la categoría'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">{{ form_label(form.name, 'Nombre de la categoría') }}</label>
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder' : 'Ingresa el nombre de la categoría'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">{{ form_label(form.description, 'Descripción de la categoría') }}</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder' : 'Ingresa descripción de la categoría'}}) }}
            </div>

        {{ form_end(form) }}
        
      </div>
    </div>

        </div>
    </div>

</div>
{% endblock %}
